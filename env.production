# ClientFlow AI Suite - Production Environment Variables

# Application
NODE_ENV=production
PORT=3000
API_URL=https://your-domain.com
WEBHOOK_URL=https://your-domain.com

# Database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# PostgreSQL (for n8n)
POSTGRES_DB=clientflow
POSTGRES_USER=clientflow
POSTGRES_PASSWORD=your-secure-db-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=your-secure-n8n-password
N8N_ENCRYPTION_KEY=your-32-character-encryption-key
N8N_DB_NAME=n8n
N8N_DB_USER=n8n
N8N_DB_PASSWORD=your-n8n-db-password
N8N_API_KEY=your-n8n-api-key

# Twilio Voice Integration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token

# OpenAI Integration
OPENAI_API_KEY=your-openai-api-key

# Redis Cache
REDIS_PASSWORD=your-redis-password

# ClientFlow API
CLIENTFLOW_API_KEY=your-clientflow-api-key

# Monitoring
GRAFANA_PASSWORD=your-grafana-password

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# CORS
CORS_ORIGIN=https://your-frontend-domain.com,https://your-admin-domain.com

# Timezone
TIMEZONE=America/New_York

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS (Optional - if not using Twilio)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com

# External Integrations
GOOGLE_CALENDAR_CREDENTIALS=your-google-calendar-credentials
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
HUBSPOT_API_KEY=your-hubspot-api-key

# Backup
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

