{
  "name": "clientflow-ai-suite",
  "version": "1.0.0",
  "description": "Professional CRM API with AI-powered business automation",
  "main": "index-production.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "start:production": "node index-production.js",
    "test": "node test/unit.test.js",
    "test:unit": "node test/unit.test.js",
    "test:integration": "node test/integration.test.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "smoke": "tsx scripts/smoke.ts",
    "smoke:production": "node scripts/smoke-test.js",
    "migrate": "node scripts/migrate.js up",
    "migrate:status": "node scripts/migrate.js status",
    "migrate:rollback": "node scripts/migrate.js rollback",
    "migrate:ci": "bash scripts/run-migrations.sh full",
    "health": "curl -f http://localhost:4000/api/health || exit 1",
    "deploy": "vercel --prod",
    "deploy:production": "bash scripts/deploy-production.sh"
  },
  "keywords": [
    "crm",
    "api",
    "business-automation",
    "customer-management",
    "supabase",
    "render",
    "production-ready"
  ],
  "author": {
    "name": "ClientFlow AI Suite",
    "email": "hello@clientflow.ai"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Priyansh-Agarwal/clientflow-fullstack-production.git"
  },
  "bugs": {
    "url": "https://github.com/Priyansh-Agarwal/clientflow-fullstack-production/issues"
  },
  "homepage": "https://clientflow.ai",
  "dependencies": {
    "express": "^4.18.2",
    "@supabase/supabase-js": "^2.38.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-mongo-sanitize": "^2.2.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "pino": "^8.16.2",
    "pino-http": "^8.5.0",
    "bullmq": "^4.15.4",
    "ioredis": "^5.3.2",
    "@sendgrid/mail": "^8.1.0",
    "twilio": "^4.19.0",
    "stripe": "^14.7.0",
    "uuid": "^9.0.1",
    "axios": "^1.6.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/express-slow-down": "^1.1.0",
    "@types/winston": "^2.4.4",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.1",
    "tsx": "^4.6.2",
    "vitest": "^1.0.4",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "@types/jsonwebtoken": "^9.0.5",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "rimraf": "^5.0.5"
  }
}